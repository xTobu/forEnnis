block own_style
    link(rel = 'stylesheet', href = 'css/gift.css')
block prepend beforeBody
  - bodyClasses= 'h100'
  //- - bodyClasses.push('h100')
block gift
    a.active 兌換好禮
block pointBox
  a.pointBox.recordBox(href="#") 兌換記錄
block outside
  //exchange record
  .lightbox.lightbox-record(style="display:none")
    .lightbox_outter
      a.btn-lightbox(href="#")
              span.icon-close 
      .main
        h2
          span.icon-tt_record
        .detail
          ul
            li
              span.date 2/23
              span.item 兌換 可口可樂® 沙拉木碗組 乙組
            li
              span.date 2/23
              span.item 兌換 可口可樂® x 大同聯名電鍋 乙個
              span.code e同購結帳代碼：CPXXXXXX
