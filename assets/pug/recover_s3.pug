extends ./include/layout
block own_style
    link(rel = 'stylesheet', href = 'css/account.css')
block pointBox
block content
  .wrap.h100
    .main
        .tt <span class="icon-tt_rs_pw"></span>
        p.sub 請重新設定密碼
        // form
        .form
          ul
            li
              label 新密碼
              a.del_pos
                span.icon-delete
              input#password(type='password', maxlength='8', placeholder='請輸入您的新密碼')
            li
              label 確認密碼
              a.del_pos
                span.icon-delete
              input#password(type='password', maxlength='8', placeholder='請再次輸入您的新密碼')
            p.warn 您的密碼不符，請重新輸入
        // btn
        a.r_bg(href="signin2.html") 
          span 確認送出

    
