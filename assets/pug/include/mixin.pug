					span #{left} 點
				li
					span 尚餘數量
					span #{pack} 組
//- index
mixin product(crossover,href,pic,name)
	-var path = "img/"
	li
		a(class!=attributes.class href=href)
			|
			span.img
				|
				img(src=path + pic, alt="")
			|
			|
			span.txt 
				span.break 
					span.icon-pos
						span.icon-coke
					|
					|
					span  #{crossover}
				|
				|
				span.break #{name}
